<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="GSMArena Test Suite">
    <listeners>
        <listener class-name="utils.ListenerUtil"></listener>
    </listeners>
    <test name="Regression_chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="module_mainmenu.MainMenuTest"></class>
            <class name="module_searchbox.SearchBoxTest"></class>
            <class name="module_phoneFinder.PhoneFinderTest"></class>
        </classes>
    </test>

    <test name="Regression_firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="module_mainmenu.MainMenuTest"></class>
            <class name="module_searchbox.SearchBoxTest"></class>
            <class name="module_phoneFinder.PhoneFinderTest"></class>
        </classes>
    </test>
</suite>
